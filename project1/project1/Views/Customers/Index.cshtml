@model List<project1.logic.Models.Customers>

@{
    ViewData["Title"] = "Index";
}

<h2>Customer List at Zhou Mama</h2>

<p>
    <a asp-action="Create">Customers</a>
</p>

<form method="post" action="@Url.Action("Index", "PlaceOrder")">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Address
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr>
                <td>
                <input type="radio" name="patron" id="@Html.DisplayFor(modelItem => item.name)"
                       value="@Html.DisplayFor(modelItem => item.name)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>

                </tr>
                
            }
        </tbody>
    </table>

    <button type="submit">Order for Customer</button>
</form>
    <form method="post" action="@Url.Action("Index", "Customers")">
        <input type="text" name="search" />
        <button type="submit" name="searchbar">Search</button>
    </form>
    <form method="post" action="@Url.Action("Index", "MainMenu")">
        <button type="submit">Go back</button>
    </form>
