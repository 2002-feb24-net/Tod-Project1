@model List<project1.logic.Models.Customers>

@{
    ViewData["Title"] = "Index";
}

<h2>Customer List at Zhou Mama</h2>

<p>
    <a asp-action="Create">Customers</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.address)
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
<form method="post" action="@Url.Action("Index", "Customers")">
    <input type="text" name="search" />
    <button type="submit" name="searchbar">Search</button>
</form>
<form method="post" action="@Url.Action("Index", "MainMenu")">
    <button type="submit">Go back</button>
</form>
