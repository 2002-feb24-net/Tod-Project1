<style>
    label 
    {
        width: 150px;
        display: inline-block;
    }
</style>
<ol>
@for (int i = 0; i < Model.Count; i++ ) 
{ 
        
           
                @if(i == 0 || i > 0 && Model[i].category != Model[i - 1].category)
                {
                    @Model[i].category.ToString()
                }
            
                
                
               <li><label>@Model[i].item</label> 
               <label> @Model[i].price</label></Li>
           
}
</ol>    
    
