@model IEnumerable<project1.data.Entities.Location>

@{
    ViewData["Title"] = "Store Locations";
}

<h2>Welcome to Zhou Mama's Chinese Restaurant</h2>

<p>
    <a asp-action="Create">Current Locations</a>
</p>
<form method = "post" action = "@Url.Action("Index", "MainMenu")" class="form-inline">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Storenum)
                    </td>
                    <td>
                        <input type="radio" name="locale" id="
                @Html.DisplayFor(modelItem => item.Storenum)"  
                    value="@Html.DisplayFor(modelItem => item.Storenum)@Html.DisplayFor(modelItem => item.Name)" />
                        <!--<a asp-action="Edit" asp-route-id="@item.Storenum">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Storenum">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Storenum">Delete</a>-->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

<button type="submit" class="btn-primary">Submit</button>
</form>


